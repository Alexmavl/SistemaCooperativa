@model SistemaCooperativa.Models.Persona

<h2>Crear Persona</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <!-- Más campos aquí... -->

    <div class="form-group">
        <label asp-for="IdTipoPersona" class="control-label"></label>
        <select asp-for="IdTipoPersona" class="form-control" asp-items="ViewBag.IdTipoPersona"></select>
    </div>
    <div class="form-group">
        <label asp-for="IdEstatus" class="control-label"></label>
        <select asp-for="IdEstatus" class="form-control" asp-items="ViewBag.IdEstatus"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
